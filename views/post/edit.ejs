<%- include('../partials/header.ejs') %>

<div class="form-box">
  <div class="chi-profile">
    <h3>Edit Job</h3>
  </div>

  <form class="input-group-new" id="job-post" method="POST" action="/post/jobPost/<%= post.id %>?_method=PUT">

    <!-- <label for="title">Edit Job Title</label> -->
    <input
      class="input-field"
      type="text"
      name="title"
      placeholder="Title of job">

    <div class="experience">
		<!-- <label for="experience">Edit Level of Experience</label> -->
			<select class="input-field" id="experience" name="experience">
			 <option value="entry-level">Entry Level</option>
			 <option value="mid-level">Mid Level</option>
			 <option value="senior">Senior Engineer</option>
			 <option value="principal">Principal Engineer</option>
			</select>
		</div>

    <div class="budget">

		<!-- <label for="budget">Edit Budget:</label> -->
			<select class="input-field" id="budget" name="budget">
			  <option value="low">Below $1,000</option>
			  <option value="mid">$1,000 - $5,000</option>
			  <option value="high">Above $5,000</option>
			</select>

		</div>

    <div>

			<!-- <label for="description">Edit Job Description:</label> -->
		  <textarea
        class="input-field"
				id="description"
				name="description"
				rows="4"
				cols="50"
				placeholder="Edit your job details here"></textarea>
		</div>
    <button class="submit-btn-profile">Update</button>
  </form>



<%- include('../partials/footer.ejs') %>
